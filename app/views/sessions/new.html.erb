<h1 class="text-center mt-4 mb-2">Login to Alpha Blog</h1>

<div class="row justify-content-center bg-form">
  <div class="col-10">
    <%= form_with(scope: :session, url: login_path, class: "shadow mb-3 p-3 bg-info rounded", local: true) do |f| %>
      <div class="form-group row mb-2">
        <%= f.label :email, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
        </div>
      </div>

      <div class="form-group row justify-content-center text-center mt-3 mb-3">
        <div class="col-10 col-offset-2">
          <%= f.submit "Log in", class: "btn btn-outline-light btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
    <div class="text-center">
      <%= link_to "[ Cancel and Return back to articles listing ]", articles_path(@article), class: "text-info" %>
    </div>
</div>