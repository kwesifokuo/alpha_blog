<h1 class="text-center mt-4 mb-2"><%= @user.username %>'s profile</h1>

<div class="img thumbnail">
  <%= gravatar_for @user, size: 200 %>
</div>

<% if logged_in? && ( @user == current_user || current_user.admin? ) %>
  <div class="text-center mt-4">
    <%= link_to 'Edit your profile', edit_user_path(@user), class: "btn btn-outline-success" %> 
  </div>
<% end %>

<h3 class="text-center mt-4 mb-2">Articles</h3>

<div class="flickr_pagination mb-5">
  <%= will_paginate @articles, :container => false %>
</div>
<%= render 'articles/article' %>

