<h1 class="text-center mt-4 mb-2">Category: <%= @category.name %></h1>

<% if logged_in? && current_user.admin? %>
  <div class="text-center mt-4">
    <%= link_to 'Edit category name', edit_category_path(@category), class: "btn btn-outline-success" %> 
  </div>
<% end %>

